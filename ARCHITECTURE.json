      "ports": [8084],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-shipments-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.shipments.service.ShipmentsServiceApplication"
    },
    {
      "name": "issues-service",
      "path": "issues-service",
      "ports": [8085],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-issues-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.issues.service.IssuesServiceApplication"
    }
  ],
  "frontends": [
    {
      "name": "frontend-react-ui",
      "path": "frontend-react",
      "ports": [80],
      "config_files": ["nginx.conf", "package.json"],
      "docker_image": "mxuriciocm/fleet-management-microservices-frontend-react-ui:latest",
      "build": "Dockerfile",
      "entrypoint": "nginx -g 'daemon off;'"
    }
  ],
  "scripts": {
    "smokes": [
      "scripts/db_audit.sh",
      "scripts/diagnose_login.sh",
      "scripts/iam_invite_smoke.sh"
    ],
    "playwright": [
      "frontend-react/scripts/_mailhog.js",
      "frontend-react/scripts/prove_admin_charts_never_disappear.js",
      "frontend-react/scripts/prove_admin_charts_visible.js",
