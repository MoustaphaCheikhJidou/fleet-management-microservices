      "frontend-react/scripts/prove_login_flow.js",
      "frontend-react/scripts/prove_login_styles.js",
      "frontend-react/scripts/prove_no_signup_visible.js",
      "frontend-react/scripts/prove_operator_account_flow.js",
      "frontend-react/scripts/prove_operator_dashboard.js",
      "frontend-react/scripts/prove_operator_live_fallback.js",
      "frontend-react/scripts/prove_operator_set_password.js",
      "frontend-react/scripts/prove_styles.js",
      "frontend-react/scripts/test_mailhog_extractor.js"
    ],
    "scans": [
      "frontend-react/scripts/scan_forbidden.py"
    ]
  },
  "docs": [
    "README.md",
    "frontend-react/README.md"
  ],
  "entrypoints": {
    "config-service": "com.config.service.ConfigServiceApplication",
    "eureka-service": "com.eureka.service.EurekaServiceApplication",
    "gateway-service": "com.gateway.service.GatewayServiceApplication",
    "iam-service": "com.iam.service.IamServiceApplication",
    "profiles-service": "com.profiles.service.ProfilesServiceApplication",
    "vehicles-service": "com.vehicles.service.VehiclesServiceApplication",
    "shipments-service": "com.shipments.service.ShipmentsServiceApplication",
    "issues-service": "com.issues.service.IssuesServiceApplication",
    "frontend-react": "main.js"
  }
}
