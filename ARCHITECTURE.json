{
  "services": [
    {
      "name": "config-service",
      "path": "config-service",
      "ports": [8888],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-config-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.config.service.ConfigServiceApplication"
    },
    {
      "name": "eureka-service",
      "path": "eureka-service",
      "ports": [8761],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-eureka-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.eureka.service.EurekaServiceApplication"
    },
    {
      "name": "gateway-service",
      "path": "gateway-service",
      "ports": [8080],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-gateway-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.gateway.service.GatewayServiceApplication"
    },
    {
      "name": "iam-service",
      "path": "iam-service",
      "ports": [8081],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-iam-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.iam.service.IamServiceApplication"
    },
    {
      "name": "profiles-service",
      "path": "profiles-service",
      "ports": [8082],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-profiles-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.profiles.service.ProfilesServiceApplication"
    },
    {
      "name": "vehicles-service",
      "path": "vehicles-service",
      "ports": [8083],
      "health": "/actuator/health",
      "config_files": ["src/main/resources/application.yml"],
      "docker_image": "mxuriciocm/fleet-management-microservices-vehicles-service:latest",
      "build": "Dockerfile",
      "entrypoint": "com.vehicles.service.VehiclesServiceApplication"
